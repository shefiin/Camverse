<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offers</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<style>
    @keyframes modal-pop {
      0% {
        opacity: 0;
        transform: scale(0.95);
      }
      100% {
        opacity: 1;
        transform: scale(1);
      }
    }
    
    .animate-modal {
      animation: modal-pop 0.3s ease-out forwards;
    }
</style>

<body style="font-family:'Open Sans', sans-serif;">

    <%- include('../partials/adminNavbar') %>

    <div class="flex pt-[80px]">
        <%- include('../partials/adminSidebar') %>

        <main class="md:ml-56 flex-1 p-6 w-full">
            <h1 class="text-xl md:text-3xl font-semibold text-gray-800 my-10">Product offers</h1>
            
                
            <div id="deletePermission" 
                    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-60 z-50 hidden">
                <div class="bg-white p-10 rounded-lg shadow-lg w-full max-w-md animate-modal">
                <h2 class="text-xl font-semibold text-gray-600 mb-6" style="font-family: Michroma, sans-serif;">Camverse</h2>
                <div class="w-full flex items-center justify-center py-4 px-4 text-7xl text-gray-300">
                    <i class="fa-solid fa-circle-exclamation"></i>
                </div>
                <p class="text-lg font-extralight mb-6 text-center" style="font-family: 'Kanit', sans-serif;">
                    Are you sure you want to delete this product?
                </p>
                <div class="flex items-center justify-center space-x-4 mt-4">
                    <button id="confirmDelete" class="bg-red-600 w-full text-white px-12 py-2 rounded-md hover:bg-red-700 transition duration-200 ease-in-out">
                    Confirm
                    </button>
                    <button id="cancelDelete" class="bg-blue-500 w-full text-white px-12 py-2 rounded-md hover:bg-blue-600 transition duration-200 ease-in-out">
                    Cancel
                    </button>
                </div>
                </div>
            </div>
                            

            <div class="bg-black rounded-xl shadow p-4 mt-6">
                <h2 class="text-white text-lg font-semibold mb-4">Products</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full text-left text-sm text-gray-100">
                            <thead class="bg-gray-800 text-gray-100 text-sm md:text-base">
                                <tr>
                                    <th class="px-4 py-3">No</th>
                                    <th class="px-4 py-3">Image</th>
                                    <th class="px-4 py-3">Product</th>
                                    <th class="px-4 py-3">Category</th>
                                    <th class="px-4 py-3">Price</th>
                                    <th class="px-4 py-3 text-center">Offer</th>
                                    <th class="px-4 py-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-700">
                                <% products.forEach((product, index) => { %>
                                  <tr class="hover:bg-gray-800">
                                    <td class="px-4 py-2"><%= skip + index + 1 %></td>
                                    <td class="px-4 py-2">
                                      <% if (product.images && product.images.length > 0) { %>
                                        <img src="<%= product.images[0].url %>" 
                                             alt="<%= product.name %>" 
                                             class="w-16 h-16 object-contain rounded bg-white p-1">
                                      <% } else { %>
                                        <img src="/images/placeholder.png" 
                                             alt="No image available" 
                                             class="w-16 h-16 object-contain rounded">
                                      <% } %>
                                    </td>
                                    <td class="px-4 py-2 max-w-[200px] truncate"><%= product.name %></td>
                                    <td class="px-4 py-2"><%= product.category.name %></td>
                                    <td class="px-4 py-2">₹<%= product.price %></td>                               
                                    <td class="px-4 py-2 text-center">
                                        <% if (product.individualOffer && product.individualOffer.isActive) { %>
                                            <% if (product.individualOffer.discountType === "PERCENTAGE") { %>
                                            <%= product.individualOffer.discountValue %>%
                                            <% } else if (product.individualOffer.discountType === "FLAT") { %>
                                            FLAT ₹<%= product.individualOffer.discountValue %>
                                            <% } %>
                                        <% } else { %>
                                            No offer applied
                                        <% } %>                                          
                                    </td>                               
                                    <td class="px-4 py-3 flex items-center gap-4">
                                      <% if (!product.individualOffer || !product.individualOffer.isActive) { %>
                                        <button 
                                          class="addOffer-btn px-3 py-1 rounded-md bg-green-600 text-white hover:bg-green-700"
                                          data-id="<%= product._id %>">
                                          Add Offer
                                        </button>
                                      <% } else { %>       
                                        <div class="flex flex-col items-center gap-2">
                                            <button 
                                              class="addOffer-btn text-white bg-blue-500 px-2 py-1 text-xs rounded-md hover:bg-blue-600"
                                              data-id="<%= product._id %>">
                                              Edit Offer
                                            </button>
                                            <button
                                              type="button"
                                              class="ml-2 text-xs p-1 bg-red-500 hover:bg-red-600 rounded-md deleteBtn"
                                              data-id="<%= product._id %>"
                                              title="Delete">
                                              Delete Offer
                                            </button>
                                        </div>
                                      <% } %>  
                                    </td>                                                                 
                                  </tr>
                              
                                  <!-- ✅ Include modal partial and pass product -->
                                  <%- include('addOfferModal', { product: product }) %>
                                <% }); %>
                              </tbody>
                              
                        </table>
                    </div>
            </div>

            <%- include('../partials/pagination') %>

            
        </main>

    </div>

    <script>
        const menuBtn = document.getElementById('menu-toggle');
        const menu = document.getElementById('sidebar');

        menuBtn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        })

        const deleteButtons = document.querySelectorAll('.deleteBtn');
        const deleteModal = document.getElementById('deletePermission');
        const confirmBtn = document.getElementById('confirmDelete');
        const cancelBtn = document.getElementById('cancelDelete');
        const deletForm = document.getElementById('deleteForm');

        let currentDeleteId = null;

        deleteButtons.forEach((button) => {
            button.addEventListener('click', () => {
                currentDeleteId = button.getAttribute('data-id');
                deleteModal.classList.remove('hidden');
            });
        });

        confirmBtn.addEventListener('click', () => {
            if (currentDeleteId) {
                deleteForm.setAttribute('action', `/admin/offers/delete/${currentDeleteId}?_method=PATCH`);
                deleteForm.submit();
            }
        });
            
        cancelBtn.addEventListener('click', () => {
            deleteModal.classList.add('hidden');
            currentDeleteId = null;
        }); 

    </script>

    <form id="deleteForm" method="POST" style="display: none;"></form>   
    
</body>
</html>