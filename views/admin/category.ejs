<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Camverse - Category Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin/category.css">

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <% include ./partials/sidebar.ejs %>
            </div>
            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 ms-sm-auto main-content">
                <!-- Mobile Menu Toggle Button -->
                <button class="btn btn-camverse mobile-menu-btn d-md-none mb-3" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="h4 mb-0">Category Management</h2>
                    <button class="btn btn-camverse">
                        <i class="fas fa-plus me-1"></i> Add New
                    </button>
                </div>
                
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>All Categories</span>
                        <form action="/admin/categories" method="GET" class="d-flex" style="width: 250px;">
                            <input name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" type="text" class="form-control" placeholder="Search...">
                            <button class="btn btn-outline-secondary" type="submit">
                              <i class="fas fa-search"></i>
                            </button>
                            <% if (search) { %>
                              <a href="/admin/categories" class="btn btn-outline-danger ms-2">Clear</a>
                            <% } %>
                          </form>
                          
                    </div>
                    
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Image</th>
                                        <th>Offer</th>
                                        <th>Discount</th>
                                        <th>Valid Until</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach((category, index) => { %>
                                      <tr>
                                        <td><%= index + 1 + ((currentPage - 1) * perPage) %></td>
                                        <td>
                                          <img src="<%= category.image %>" alt="Category" class="category-img">
                                        </td>
                                        <td><%= category.offerName %></td>
                                        <td><%= category.discount %>%</td>
                                        <td><%= category.validUntil.toISOString().split('T')[0] %></td>
                                        <td>
                                          <span class="status-badge <%= category.isDeleted ? 'status-inactive' : 'status-active' %>">
                                            <%= category.isDeleted ? 'Inactive' : 'Active' %>
                                          </span>
                                        </td>
                                        <td>
                                          <a href="/admin/category/edit/<%= category._id %>" class="btn btn-sm btn-outline-primary action-btn">
                                            <i class="fas fa-pencil-alt"></i>
                                          </a>
                                          <a href="/admin/category/delete/<%= category._id %>" class="btn btn-sm btn-outline-danger action-btn" onclick="return confirm('Are you sure to delete this category?')">
                                            <i class="fas fa-trash-alt"></i>
                                          </a>
                                        </td>
                                      </tr>
                                    <% }) %>
                                  </tbody>
                                  
                            </table>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <% const start = (currentPage - 1) * perPage + 1; %>
                            <% const end = Math.min(currentPage * perPage, totalCategories); %>
                            <div class="text-muted">
                              Showing <%= start %> to <%= end %> of <%= totalCategories %> entries
                            </div>                            
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                      </li>
                                    <% } %>
                                  </ul>
                                  
                            </nav>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('show');
        }
    </script>
</body>
</html>