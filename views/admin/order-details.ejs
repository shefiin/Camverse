<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body style="font-family:'Open Sans', sans-serif;">
    
    <%- include('partials/adminNavbar') %>

    <div class="flex pt-[80px]">
        <%- include('partials/adminSidebar') %>

        <main class="md:ml-56 flex-1 p-1 md:p-6 w-full relative">
            <h1 class="text-xl md:text-3xl font-semibold text-gray-800 mt-10 mb-10 ml-20">Order Management</h1>

            

            <!-- Button -->
            <div class="flex justify-end mr-10 mb-3">
                <% if (order.products.some(p => p.status === 'Return in process')) { %>
                <button
                    id="returns-btn"
                    class="border bg-orange-100 hover:bg-orange-200 border-orange-400 text-orange-500 rounded-lg py-1 px-3"
                    data-orderid="<%= order._id %>">
                    View Returns
                </button>
                <% } %>
            </div>
            
            <!-- Modal -->
            <div id="returns-modal" 
                class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-60 z-50 opacity-0 pointer-events-none transition-opacity duration-300">
                <div id="returns-card"
                    class="order-card bg-white rounded-xl shadow-lg p-6 max-h-[80vh] overflow-y-auto w-full max-w-3xl transform scale-90 opacity-0 transition-all duration-300">
                <h2 class="text-xl font-semibold mb-6 text-gray-800">Return Requests</h2>
                
                <div class="space-y-6 divide-y divide-gray-300">
                    <% order.products.forEach(p => { %>
                    <% if (p.status === 'Return in process') { %>
                        <div class="pt-4 flex items-start gap-4">
                        <!-- Product Image -->
                        <% if (p.productId && p.productId.images && p.productId.images.length > 0) { %>
                            <img src="<%= p.productId.images[0].url %>" 
                                alt="<%= p.productId.name %>" 
                                class="w-20 h-20 p-1 object-contain bg-white rounded">
                        <% } else { %>
                            <img src="/images/placeholder.png" 
                                alt="No image available" 
                                class="w-20 h-20 object-contain rounded">
                        <% } %>
            
                        <!-- Product Info + Form -->
                        <div class="flex-1">
                            <p class="text-gray-800 font-medium"><%= p.productId?.name || "Unknown Product" %></p>
                            <p class="text-sm text-gray-500">Qty: <%= p.quantity %></p>
                            <p class="text-sm text-gray-500">Price: ₹ <%= p.price.toLocaleString() %></p>
                            <p class="text-base text-gray-800 font-semibold mb-3">
                            Total: ₹ <%= (p.quantity * p.price).toLocaleString() %>
                            </p>
            
                            <!-- Return Reason -->
                            <div class="border border-gray-300 rounded p-3 bg-gray-50 mb-3">
                            <p class="text-sm text-gray-600">
                                Reason: <%= p.returnReason || "No reason provided" %>
                            </p>
                            </div>
            
                            <!-- Accept / Reject Form -->
                            <form action="/admin/orders/<%= order.id %>/return/<%= p._id %>?_method=PATCH" method="POST" class="flex gap-3">
                            <button type="submit" name="action" value="accept"
                                    class="px-4 py-1 bg-teal-600 text-white rounded-lg hover:bg-teal-700">
                                Accept
                            </button>
                            <button type="submit" name="action" value="reject"
                                    class="px-4 py-1 bg-red-700 text-white rounded-lg hover:bg-red-800">
                                Reject
                            </button>
                            </form>
                        </div>
                        </div>
                    <% } %>
                    <% }) %>
                </div>
                </div>
            </div>
            
            <script>
                const btn = document.getElementById("returns-btn");
                const modal = document.getElementById("returns-modal");
                const card = document.getElementById("returns-card");
            
                btn?.addEventListener("click", () => {
                modal.classList.remove("opacity-0", "pointer-events-none");
                card.classList.remove("scale-50", "opacity-0");
                });
            
                // Close modal when clicking outside
                modal.addEventListener("click", (e) => {
                if (e.target === modal) {
                    modal.classList.add("opacity-0", "pointer-events-none");
                    card.classList.add("scale-50", "opacity-0");
                }
                });
            </script>
  
                  
                
                
                <div class="order-card shadow-md block space-y-3 md:flex rounded-2xl justify-between items-center bg-gray-900 text-white p-6 px-10 mb-4 hover:shadow-lg transition ml-10 mr-10">
                    <div class="flex-col">
                        <p class="text-xs md:text-sm text-gray-500">Order ID:</p>
                        <p class="tex-sm text-white md:text-xl"> <%= orderID %> </p>
                    </div>
                    <div class="flex-col">
                        <p class="text-xs md:text-sm text-gray-500">Date</p>
                        <p class="tex-sm text-white md:text-lg"> <%= date %> </p>
                    </div>
                    <div class="flex-col">
                        <% if(order.status === 'Placed') { %>
                            <div class="bg-gray-100 py-1 px-2 rounded-full text-gray-600">
                              <p class="font-normal text-xs md:text-sm">
                                <i class="fa-solid fa-hourglass-end p-1"></i>
                                Placed
                              </p>
                            </div>                                     
                          <% } else if(order.status === 'Shipped') { %>
                            <div class="bg-blue-100 py-1 px-2 text-center rounded-full text-gray-800">
                              <p class="font-normal text-xs md:text-sm">
                                <i class="fa-solid fa-truck-fast"></i>
                                Shipped
                              </p>
                            </div>
                          <% } else if(order.status === 'Out for delivery') { %>  
                            <div class="bg-green-100 py-1 px-2 rounded-full text-gray-700">
                              <p class="font-normal text-xs md:text-sm">
                                <i class="fa-regular fa-circle-check"></i>
                                Out for delivery
                              </p>
                            </div>
                          <% } else if(order.status === 'Delivered') { %>  
                            <div class="bg-green-100 py-1 px-2 rounded-full text-gray-700">
                              <p class="font-normal text-xs md:text-sm">
                                <i class="fa-solid fa-box-open"></i>
                                Delivered
                              </p>
                            </div>
                          <% } else if(order.status === 'Cancelled') { %>  
                            <div class="bg-red-100 py-1 px-2 text-center rounded-full text-red-600">
                              <p class="font-normal text-xs md:text-sm">
                                <i class="fa-regular fa-circle-xmark"></i>
                                Cancelled
                              </p>
                            </div>
                          <% } else if(order.status === 'Returned') { %>  
                            <div class="bg-orange-100 py-1 px-2 text-center rounded-full text-orange-600">
                              <p class="font-normal text-xs md:text-sm">
                                <i class="fa fa-truck"></i>
                                Returned
                              </p>
                            </div>
                        <% } %>    
                    </div>
        
                    <% 
                      const deliveredProducts = order.products.filter(pr => pr.status === 'Delivered');
                    %>
        
                    <form action="/admin/orders/status/update/<%= order._id %>?_method=PATCH" method="POST" class="relative inline-block mb-6">
                        <!-- Trigger button -->
                        <button 
                        type="button" 
                        onclick="toggleDropdown('<%= order._id %>')" 
                        class="bg-teal-600 hover:bg-teal-700 text-white px-4 py-2 rounded-md flex items-center gap-2"
                        >
                        Update Status
                        <i class="fa-solid fa-chevron-down text-sm transition-transform duration-200" id="arrow-<%= order._id %>"></i>
                        </button>
                    
                        <!-- Dropdown -->
                        <div 
                        id="dropdown-<%= order._id %>" 
                        class="absolute right-0 mt-2 w-56 bg-white border rounded-lg shadow-lg z-50 p-4 transform scale-y-0 origin-top transition-transform duration-200"
                        >
                        <div class="space-y-2 text-gray-900">
                            <label class="flex items-center">
                            <input type="radio" name="status" value="Placed" <%= order.status === 'Placed' ? 'checked' : '' %> class="mr-2">
                            Placed
                            </label>
                            <label class="flex items-center">
                            <input type="radio" name="status" value="Shipped" <%= order.status === 'Shipped' ? 'checked' : '' %> class="mr-2">
                            Shipped
                            </label>
                            <label class="flex items-center">
                            <input type="radio" name="status" value="Out for delivery" <%= order.status === 'Out for Delivery' ? 'checked' : '' %> class="mr-2">
                            Out for Delivery
                            </label>
                            <label class="flex items-center">
                            <input type="radio" name="status" value="Delivered" <%= order.status === 'Delivered' ? 'checked' : '' %> class="mr-2">
                            Delivered
                            </label>
                            <label class="flex items-center text-red-600">
                            <input type="radio" name="status" value="Cancelled" <%= order.status === 'Cancelled' ? 'checked' : '' %> class="mr-2">
                            Cancelled
                            </label>
                        </div>
                    
                        <!-- Update button -->
                        <div class="mt-4 text-center">
                            <button type="submit" class="bg-teal-600 hover:bg-teal-700 text-white px-3 py-1 w-full rounded-md">
                            Update
                            </button>
                        </div>
                        </div>
                    </form>
                    
                    <script>
                        function toggleDropdown(id) {
                        const dropdown = document.getElementById(`dropdown-${id}`);
                        const arrow = document.getElementById(`arrow-${id}`);
                        dropdown.classList.toggle("scale-y-0");
                        arrow.classList.toggle("rotate-180");
                        }
                    </script>                            
                    
                </div>
        
        
                <div class="shadow-md bg-gray-900 hover:shadow-lg transition rounded-2xl ml-10 mr-10 p-6 mb-4">
                    <h2 class="text-lg font-semibold text-white mb-6">Ordered Products</h2>
                  
                    <% order.products.forEach(p => { %>
                      <div class="order-card flex justify-between items-center bg-gray-900 p-3 border-b border-gray-700">
                        
                        <!-- Product Info -->
                            <div class="product-item flex items-center gap-3">
                            <% if (p.productId && p.productId.images && p.productId.images.length > 0) { %>
                                <img src="<%= p.productId.images[0].url %>" 
                                    alt="<%= p.productId.name %>" 
                                    class="w-20 h-20 p-1 object-contain bg-white 
                                    <%= p.status === 'Cancelled' || 
                                    order.status === 'Cancelled' || 
                                    order.status === "Returned"  ||
                                    p.status === 'Returned' ? 
                                    'opacity-60 grayscale' : '' %>">
                                    
                            <% } else { %>
                                <img src="/images/placeholder.png" 
                                    alt="No image available" 
                                    class="w-20 h-20 object-contain">
                            <% } %>
                  
                          <div>
                            <p class="text-white font-medium"><%= p.productId?.name || "Unknown Product" %></p>
                            <p class="text-sm text-gray-300">Qty: <%= p.quantity %></p>
                            <p class="text-sm text-gray-300">Price: ₹ <%= p.price.toLocaleString() %></p>
                            <p class="text-base text-gray-100 font-semibold mb-2">Total: ₹<%= (p.quantity * p.price).toLocaleString() %></p>
                            <% if(p.status === 'Cancelled' && order.status !== 'Cancelled') { %>                    
                              <p class="font-normal text-xs md:text-sm text-red-500">                      
                                Cancelled
                              </p>
                            <% } else if(p.status === 'Returned' && order.status !== 'Cancelled') { %> 
                              <p class="font-normal text-xs md:text-sm text-orange-500">                      
                                Returned
                              </p>
                            <% } else if(p.status === 'Return in process' && order.status !== 'Cancelled') { %> 
                              <p class="font-normal text-xs md:text-sm text-orange-400">                      
                                Customer wants to return this product
                              </p>
                            <% } %>
                          </div>
                        </div>
                  
                        <!-- Cancel Button -->
                        <% 
                          const activeProducts = order.products.filter(pr => pr.status === 'Placed');
                        %>
                      </div>
                    <% }) %> 
                    <p class="text-lg font-semibold text-white mt-4">Total Amount: ₹<%= order.totalAmount.toLocaleString() %></p>
                </div>
        
                <div class="grid md:grid-cols-3 gap-6 max-w-8xl mx-auto items-stretch ml-10 mr-10">
        
                    <div class="md:col-span-1 bg-gray-900 rounded-2xl shadow p-6 space-y-6">
        
                        <h2 class="text-lg text-white font-semibold mb-6">Order status</h2>
                    
                        <div class="space-y-4 max-w-[300px]">
                          <% 
                            let steps = [
                              { name: "Placed", key: "placedAt" },
                              { name: "Shipped", key: "shippedAt" },
                              { name: "Out for delivery", key: "outForDeliveryAt" },
                              { name: "Delivered", key: "deliveredAt" }
                            ]; 
                        
                            if (order.status === "Cancelled") {
                              steps.push({ name: "Cancelled", key: "cancelledAt" });
                            } else if (order.status === 'Returned'){
                              steps.push({ name: 'Returned', key: 'returnedAt' });
                            }
                          %>
                        
                            <% steps.forEach(step => { 
                              const stepDate = order[step.key];
                              const isCurrent = (order.status === step.name);
                              const isCancelled = (step.name === "Cancelled");
                              const isReturned = (step.name === "Returned");
                            %>


                            <div class="flex items-center gap-2 w-full">
                                
                                <div class="rounded-full w-4 h-4 
                                            <%= isCancelled && isCurrent 
                                                    ? 'bg-red-500' 
                                                    : (isReturned && isCurrent 
                                                        ? 'bg-orange-500' 
                                                        : (isCurrent ? 'bg-green-500' : 'bg-gray-700')) %> 
                                            flex justify-center items-center">
                                    <div class="rounded-full w-2 h-2 
                                                <%= isCancelled && isCurrent 
                                                    ? 'bg-red-300' 
                                                    : (isReturned && isCurrent 
                                                        ? 'bg-orange-300' 
                                                        : (isCurrent ? 'bg-green-300' : 'bg-gray-500')) %>">
                                    </div>
                                </div>

                                
                                <div class="flex-1 border-l-2 px-2 pr-6 py-1 rounded-lg
                                            <%= isCancelled && isCurrent 
                                                    ? 'border-red-500 bg-red-900/30' 
                                                    : (isReturned && isCurrent 
                                                        ? 'border-orange-500 bg-orange-900/30' 
                                                        : (isCurrent ? 'border-green-500 bg-green-900/30' : 'border-gray-700 bg-gray-500/20')) %>">
                                    <p class="text-sm 
                                            <%= isCancelled 
                                                    ? 'text-red-400' 
                                                    : (isReturned ? 'text-orange-400' : (isCurrent ? 'text-green-400' : 'text-gray-100')) %>">
                                    <%= step.name %>
                                    </p>
                                    <p class="text-xs text-white">
                                    <%= stepDate 
                                        ? stepDate.toLocaleString('en-IN') 
                                        : ((order.status === 'Cancelled' || order.status === 'Returned') ? '-----------' : 'Pending...') 
                                    %> 
                                    </p>
                                </div>
                            </div>

                          <% }) %>
                      
                        </div>
                        
                                  
                    </div>
                    
        
                    <div class="md:col-span-1 bg-gray-900 rounded-2xl shadow p-6 space-y-6">              
                        <h2 class="text-lg text-white font-semibold mb-6">Shipping Details</h2>
                        <div class="text-xs md:text-sm text-white font-extralight space-y-1">
                            <p> <%= address.fullName %> </p>
                            <p> <%= address.house %> </p>
                            <p> <%= address.area %> </p>
                            <p> <%= address.city %> </p>
                            <p> <%= address.state %> - <%= address.pincode %> </p>
                            <p class="text-gray-400 text-base"> Mobile: <%= address.mobile %>                
                        </div>
                    </div> 
        
                    <div class="md:col-span-1 bg-gray-900 rounded-2xl shadow p-6 space-y-6">
                        
                        <h2 class="text-lg text-white font-semibold mb-6">Payment Information</h2>
                        <div class="text-xs md:text-sm font-extralight space-y-3">
                            <div>
                                <p class="text-white text-base font-medium">Payment Method</p>
                                <p class="text-gray-400 text-sm"> <%= paymentMethod %> </p>
                            </div>
                            <div>
                                <p class="text-white text-base font-medium">Payment Status</p>
                                <p class="text-gray-400 text-sm"> <%= paymentStatus %> </p>
                            </div>                   
                        </div>
                    </div>    
                </div>
        
            









        </main>
    </div>

    <script>
        const returnsBtn = document.getElementById('returns-btn');
        const returnsModal = document.getElementById('returns-modal');
        const closeReturns = document.getElementById('close-returns')


        returnsBtn.addEventListener('click', () => {
            returnsModal.classList.remove('hidden');
        })

        closeReturns.addEventListener('click', () => {
            returnsModal.classList.add('hidden')
        })
        
    </script>

  </body>
  </html>
  