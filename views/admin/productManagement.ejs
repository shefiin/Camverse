
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Camverse - Product Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        [x-cloak] { display: none !important; }
    </style>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-50 h-screen overflow-hidden">
    <div class="flex h-full" x-data="{ sidebarOpen: false }">
        <!-- Sidebar -->
        <%- include('./partials/sidebar') -%>

        <!-- Overlay for mobile -->
        <%- include('./partials/mobileSidebar') -%>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Main Content Area with increased top padding -->
            <main class="flex-1 overflow-y-auto p-6 pt-10">
                <div class="mb-10">
                    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                        <div class="flex items-center">
                            <button @click="sidebarOpen = true" class="text-gray-500 hover:text-gray-700 lg:hidden mr-4 p-2">
                                <i data-lucide="menu" class="w-6 h-6"></i>
                            </button>
                            <h2 class="text-3xl font-bold text-gray-900">Products</h2>
                        </div>
                        
                        <div class="flex flex-col sm:flex-row gap-4 sm:items-center">
                            <!-- Search Tool -->
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i data-lucide="search" class="w-5 h-5 text-gray-400"></i>
                                </div>
                                <input type="text" placeholder="Search for Products" 
                                       class="block w-full sm:w-80 pl-10 pr-3 py-2.5 border border-gray-300 rounded-lg bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                            </div>
                            
                            <!-- Add Product Button -->
                            <button class="bg-black text-white px-6 py-2.5 rounded-lg hover:bg-gray-800 transition-colors font-medium whitespace-nowrap">
                                ADD PRODUCT +
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Products Table -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Image</th>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Name</th>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Brand</th>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Updated</th>
                                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% products.forEach(product => { %>
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= product._id %></td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <img src="<%= product.image[0] %> " alt="<%= product.name %>" class="w-12 h-12 rounded-lg object-cover">
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= product.name %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= product.brand %></td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% if (product.status === 'active') { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <span class="w-2 h-2 bg-green-500 rounded-full mr-1.5"></span>Active
                                                </span>
                                            <% } else if (product.status === 'low stock') { %>  
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                    <span class="w-2 h-2 bg-yellow-500 rounded-full mr-1.5"></span> Low Stock
                                                  </span>
                                            <% } else { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                    <span class="w-2 h-2 bg-red-500 rounded-full mr-1.5"></span> Out of Stock
                                                  </span>
                                            <% } %>
                                           
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">â‚¹<%= product.price.toLocaleString() %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.lastUpdated.toLocaleDateString() %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <div class="flex space-x-2">
                                                <a href="/admin/products/edit/<%= product._id %>" class="text-gray-400 hover:text-blue-600">
                                                    <i data-lucide="edit-3" class="w-4 h-4"></i>
                                                  </a>
                                                  <a href="/admin/products/delete/<%= product._id %>" class="text-gray-400 hover:text-red-600">
                                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                                  </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>                                     
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="bg-white px-6 py-4 border-t border-gray-200 flex items-center justify-between">
                        <div class="flex items-center text-sm text-gray-500">
                            SHOWING <%= currentPage %> OF <%= totalPages 
                        </div>
                        <div class="flex items-center space-x-1">
                            
                            <a href="?page=<%= currentPage - 1 %>" class="px-3 py-2 text-sm text-gray-500 hover:text-gray-700 transition-colors <%= currentPage === 1 ? 'pointer-events-none opacity-50' : '' %>">
                            <i data-lucide="chevron-left" class="w-4 h-4"></i>
                            </a>

                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <a href="?page=<%= i %>" class="px-3 py-2 text-sm rounded transition-colors
                                <%= currentPage === i ? 'bg-black text-white hover:bg-gray-800' : 'text-gray-500 hover:text-gray-700 bg-gray-100' %>">
                                <%= i %>
                            </a>
                            <% } %>
                           
                            <a href="?page=<%= currentPage + 1 %>" class="px-3 py-2 text-sm text-gray-500 hover:text-gray-700 transition-colors <%= currentPage === totalPages ? 'pointer-events-none opacity-50' : '' %>">
                            <i data-lucide="chevron-right" class="w-4 h-4"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();
        
        // Simple search functionality
        document.querySelector('input[type="text"]').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const productName = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
                const brand = row.querySelector('td:nth-child(4)').textContent.toLowerCase();
                
                if (productName.includes(searchTerm) || brand.includes(searchTerm) || searchTerm === '') {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>
