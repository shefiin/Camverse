<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body style="font-family:'Open Sans', sans-serif;">

    <%- include('partials/userNavbar') %>

    <section class="px-6 py-20 lg:px-12 lg:py-20 md-px-10 mt-8">
        
        <h1 class="text-2xl md:text-3xl font-semibold text-gray-800 mb-10">My Account</h1>

        <div id="successMessage" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-60 z-50 hidden">
          <div class="bg-white p-10 rounded-lg shadow-lg w-full max-w-md">
            <h2 class="text-xl font-semibold text-gray-600 mb-6" style="font-family: Michroma, sans-serif;">Camverse</h2>
            <div class="w-full flex items-center justify-center py-4 px-4 text-6xl text-green-600">
              <i class="fa-regular fa-circle-check"></i>
            </div>
            <h1 class="flex items-center justify-center text-2xl font-extralight mb-2" style="font-family: 'Kanit', sans-serif;">Profile updated successfully</h1>
          </div>
        </div>

        <!-- Email Change Modal -->
        <div id="emailModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50" style="font-family:'Open Sans', sans-serif;">
            <div class="bg-white shadow-lg p-6 max-w-md w-full">
              <div class="flex flex-col items-center text-center space-y-3">
                <i class="fas fa-exclamation-circle text-5xl text-orange-400"></i>
                <h1 class="text-2xl font-medium text-gray-800">Change Email</h1>
              </div>
              <p class="mt-4 text-gray-600 font-extralight text-sm text-center">
                You will not be able to log in to Camverse with the old email address after changing. 
                Log in to Camverse with the new email.
              </p>
            <div class="mt-6 text-center text-md">
                <a href="/user/profile/verify-old-email/<%= user._id %>" id="emailModalNext" class="bg-teal-600 hover:bg-teal-700 text-white px-4 py-2">
                    Next 
                </a>
                <button id="emailModalClose" class="ml-2 bg-gray-200 hover:bg-gray-300 px-4 py-1">
                Cancel
                </button>
            </div>
            </div>
        </div>
        

        <div class="min-h-screen bg-gray-100 flex items-center justify-center px-6 py-20" style="font-family:'Open Sans', sans-serif;">
            <form action="/user/profile/update?_method=PATCH" method="POST" enctype="multipart/form-data" 
                  class="bg-white p-8 shadow-lg w-full max-w-2xl space-y-6">
          
              <h1 class="text-2xl md:text-3xl font-semibold text-gray-800 mb-6 text-center">Edit Profile</h1>
          
              <div class="flex flex-col items-center">
                <div class="w-32 h-32 bg-gray-200 flex items-center justify-center overflow-hidden relative">
                    <img id="profilePreview" src="<%= user.profileImage || '' %>" alt="Profile Image" 
                         class="w-full h-full object-cover <%= user.profileImage ? '' : 'hidden' %>">
                    <i id="placeholderIcon" class="fas fa-user text-4xl text-gray-400 absolute <%= user.profileImage ? 'hidden' : '' %>"></i>
                  </div>
                  
                  <label class="mt-4 inline-block bg-teal-50 text-teal-600 px-4 py-2 rounded-3xl cursor-pointer hover:bg-teal-100">
                    Choose Image
                    <input type="file" name="image" accept="image/*" class="hidden" id="profileImageInput">
                  </label>          
              </div>
          
              
              <div>
                <label class="block text-sm font-extralight text-gray-700 mb-1">First Name</label>
                <input type="text" name="name" value="<%= user.name %>"
                       class="w-full border font-extralight p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
              </div>
          
              
              <div>
                <label class="block text-sm font-extralight text-gray-700 mb-1">Last Name</label>
                <input type="text" name="lastName" value="<%= user.lastName %>"
                       class="w-full border font-extralight p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
              </div>
          
              <div>
                <label class="block text-sm font-extralight text-gray-700 mb-1">Gender</label>
                <select name="gender" class="w-full border font-extralight p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
                  <option value="">Select Gender</option>
                  <option value="Male" <%= user.gender === 'Male' ? 'selected' : '' %>>Male</option>
                  <option value="Female" <%= user.gender === 'Female' ? 'selected' : '' %>>Female</option>
                </select>
              </div>
          
              
              <div>
                <label class="block text-sm font-extralight text-gray-700 mb-1">Date of Birth</label>
                <input type="date" name="dateOfBirth" value="<%= user.dateOfBirth ? user.dateOfBirth.toISOString().split('T')[0] : '' %>"
                       class="w-full border font-extralight p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
              </div>
          
              
              <div>
                <label class="block text-sm font-extralight text-gray-700 mb-1">Phone</label>
                <input type="tel" name="phone" value="<%= user.phone %>"
                       class="w-full border font-extralight p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
              </div>
          
              <!-- Email -->
              <div class="relative w-full">
                <label for="emailField" class="block text-sm font-extralight text-gray-700 mb-1">Email</label>
                <input 
                  type="email" 
                  value="<%= user.email %>" 
                  readonly
                  class="w-full px-3 py-2 pr-10 border border-gray-300 font-extralight focus:outline-none focus:ring-2 focus:ring-teal-500"
                  id="emailField"
                />
                <i 
                  class="fas fa-pencil-alt absolute right-3 top-2/3 transform -translate-y-1/2 text-gray-500 hover:text-teal-600 cursor-pointer"
                  id="editEmail"
                ></i>
              </div>
              
          
              <!-- Submit Button -->
              <div class="pt-4 text-center">
                <button id="submitBtn" type="submit" 
                        class="bg-teal-600 hover:bg-teal-700 text-white px-6 py-2">
                  Save Changes
                </button>
              </div>
          
            </form>
        </div>
          
          

    </section>    

    <%- include('partials/mobileFilter') %>

    <%- include('partials/userFooter') %>

    <script src="/js/user/homePage.js"></script>
    <script>
        const input = document.getElementById('profileImageInput');
        const preview = document.getElementById('profilePreview');
        const placeholder = document.getElementById('placeholderIcon');

        input.addEventListener('change', function() {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
            preview.src = e.target.result;
            preview.classList.remove('hidden');
            placeholder.classList.add('hidden');
            }
            reader.readAsDataURL(file);
        }
        });

     
        const editEmailBtn = document.getElementById('editEmail');
        const emailModal = document.getElementById('emailModal');
        const emailModalClose = document.getElementById('emailModalClose');
        const emailModalNext = document.getElementById('emailModalNext');
        const emailField = document.getElementById('emailField');

        editEmailBtn.addEventListener('click', () => {
            emailModal.classList.remove('hidden');
            emailModal.classList.add('flex');
        });

        emailModalClose.addEventListener('click', () => {
            emailModal.classList.add('hidden');
            emailModal.classList.remove('flex');
        });

        emailModalNext.addEventListener('click', () => {
            emailField.removeAttribute('readonly'); // Make email editable
            emailField.focus();
            emailModal.classList.add('hidden');
            emailModal.classList.remove('flex');
        });

        const urlParams = new URLSearchParams(window.location.search);
        const success = urlParams.get('success');

        if (success === '1') {
            const message = document.getElementById('successMessage');
            message.classList.remove('hidden');

            setTimeout(() => {
            message.classList.add('hidden');
            const newUrl = window.location.pathname;
            window.history.replaceState({}, document.title, newUrl);
            }, 2000); 
        }    


        const nameInput = document.querySelector('input[name="name"]');
        const phoneInput = document.querySelector('input[name="phone"]');
        const submitBtn = document.getElementById('submitBtn');

        // Create error message elements
        const nameError = document.createElement('p');
        nameError.className = 'text-red-500 text-sm mt-1 hidden';
        nameError.textContent = 'Name is required.';
        nameInput.insertAdjacentElement('afterend', nameError);

        const phoneError = document.createElement('p');
        phoneError.className = 'text-red-500 text-sm mt-1 hidden';
        phoneError.textContent = 'Phone must be numbers.';
        phoneInput.insertAdjacentElement('afterend', phoneError);

        function validateForm() {
            let valid = true;

            // Validate Name
            if (!nameInput.value.trim()) {
                nameError.classList.remove('hidden');
                nameInput.classList.remove('focus:ring-teal-500')
                nameInput.classList.add('focus:ring-red-400')
                valid = false;
            } else {
                nameError.classList.add('hidden');
            }

            // Validate Phone (only digits allowed)
            if (phoneInput.value && !/^\d+$/.test(phoneInput.value)) {
                phoneError.classList.remove('hidden');
                phoneInput.classList.remove('focus:ring-teal-500')
                phoneInput.classList.add('focus:ring-red-400')
                valid = false;
            } else {
                phoneError.classList.add('hidden');
                phoneInput.classList.remove('focus:ring-red-400')
                phoneInput.classList.add('focus:ring-teal-500')
            }

            // Enable/disable submit button
            submitBtn.disabled = !valid;
            submitBtn.classList.toggle('opacity-50', !valid);
            submitBtn.classList.toggle('cursor-not-allowed', !valid);
        }

        // Check live while typing
        nameInput.addEventListener('input', validateForm);
        phoneInput.addEventListener('input', validateForm);

        // Initial check on page load
        validateForm();



    </script>
 
</body>
</html>        