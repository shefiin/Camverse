<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body style="font-family:'Open Sans', sans-serif;">

    <%- include('../partials/userNavbar') %>

        <div class="min-h-screen bg-gray-100 py-10 px-4 md:px-8 mt-20">
            <h1 class="text-2xl md:text-3xl font-normal text-gray-800 mb-8">
              Shopping Cart
            </h1>
          
            <div class="grid md:grid-cols-3 gap-6 max-w-8xl mx-auto">
              <!-- Cart Items -->
              <div class="md:col-span-2 bg-white shadow p-6 space-y-6">
                <% if(cart && cart.items.length > 0) { %>
                  <% cart.items.forEach(item => { %>
                    <div class="flex flex-col md:flex-row items-center gap-4 border-b pb-4">
                      <!-- Product Image -->
                      <img src="<%= item.product.images[0].url %>" alt="<%= item.product.name %>" 
                           class="w-28 h-28 md:w-34 md:h-34 object-contain">
          
                      <!-- Product Info -->
                      <div class="flex-1 text-center md:text-left">
                        <h2 class="text-lg font-semibold text-gray-800"><%= item.product.name %></h2>
                        
                        <p class="text-sm text-gray-500 font-extralight">
                          Brand: 
                          <span class="text-blue-400 font-light text-sm"> 
                            <%= item.product.brand.name %> 
                          </span>
                        </p>

                        <p class="text-sm text-gray-500 font-extralight">
                          Category: 
                          <span class="text-blue-400 font-light text-sm"> 
                            <%= item.product.category.name %> 
                          </span> 
                        </p>

                        <p class="mt-1 text-gray-700 font-semibold">₹<%= item.product.price.toLocaleString() %></p>
                        <p class="mt-1 text-gray-400 line-through text-sm">₹<%= item.product.mrp.toLocaleString() %></p>
                        <p class="text-sm text-green-600">
                          (Save ₹<%= (item.product.mrp - item.product.price).toLocaleString() %>, 
                          <%= Math.round(((item.product.mrp - item.product.price) / item.product.mrp) * 100) %>% off)
                        </p>
                      </div>
          
                      <!-- Quantity Controls -->
                      <div class="flex flex-col items-center gap-2">
                        
                        <div class="flex items-center gap-2">
                            <form action="/cart/decrease/<%= item.product._id %>" method="POST">
                              <button class="px-2 py-1 bg-gray-50 hover:bg-gray-100 text-red-500 disabled:opacity-50 disabled:cursor-not-allowed"
                                <%= item.quantity === 1 ? "disabled" : "" %>>
                                <i class="fa-solid fa-minus"></i>
                              </button>
                            </form>
                            <span class="px-3 py-1 bg-gray-50 font-bold"><%= item.quantity %></span>
                            <form action="/cart/increase/<%= item.product._id %>" method="POST">
                              <button class="px-2 py-1 bg-gray-50 hover:bg-gray-100 text-green-600">
                                <i class="fa-solid fa-plus"></i>
                              </button>
                            </form>
                        </div>
                                              <!-- Remove Button -->
                        <form action="/cart/remove/<%= item.product._id %>" method="POST">
                            <button class="text-red-500 text-sm bg-gray-50 hover:bg-gray-100 px-7 py-1">Remove</button>
                        </form>
                      </div>
          

                    </div>
                  <% }) %>
                <% } else { %>
                  <p class="text-gray-500 font-extralight">Your Camverse cart is empty.</p>
                  <a href="/shop" class="text-blue-500 text-sm hover:underline">Continue shopping ></a>
                <% } %>
              </div>
          
              <!-- Summary -->
              <div class="bg-white shadow p-6 h-fit">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Summary <span class="font-extralight">(<%= totalQuantity %> Items)</span></h2>
                <% if(cart && cart.items.length > 0) { %>
                    <div class="flex justify-between text-gray-600 mb-2">
                    <span>Subtotal</span>
                    <span>₹<%= total.toLocaleString() %></span>
                    </div>
                    <div class="flex justify-between text-gray-600 mb-2">
                    <span>Shipping</span>
                    <span>Free</span>
                    </div>
                    <hr class="my-3">
                    <div class="flex justify-between font-bold text-gray-800 text-lg mb-6">
                    <span>Total</span>
                    <span>₹<%= total.toLocaleString() %></span>
                    </div>
                    <a href="/checkout" 
                    class="block text-center bg-teal-600 text-white font-semibold py-2 hover:bg-teal-700">
                    Proceed to Checkout
                    </a>
                <% } %>
              </div>
            </div>
        </div>
          





    <%- include('../partials/mobileFilter') %>

    <%- include('../partials/userFooter') %>

    <script src="/js/user/homePage.js"></script>    

</body>
</html>        