<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</head>
<body style="font-family:'Open Sans', sans-serif;">

    <%- include('../partials/userNavbar') %>

    <div class="min-h-screen bg-gray-50 py-10 px-4 md:px-8 mt-20">
        <h1 class="text-2xl md:text-3xl font-normal text-gray-800 mb-8">
          Checkout
        </h1>

        <% let selectedAddress; %>

        <% if (!user.addresses || user.addresses.length === 0) { %>
        <% } else if (user.addresses.length === 1) { 
            selectedAddress = user.addresses[0];
        %>
        <% } else { 
            const defaultAddress = user.addresses.find(addr => addr.isDefault);
            selectedAddress = defaultAddress || user.addresses[0];
        %>
        <% } %>

        <!-- Success & Edit Modals -->
        <div id="successMessage" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-60 z-40 hidden">
          <div class="bg-white p-10 rounded-lg shadow-lg w-full max-w-md">
            <h2 class="text-xl font-semibold text-gray-600 mb-6" style="font-family: Michroma, sans-serif;">Camverse</h2>
            <div class="w-full flex items-center justify-center py-4 px-4 text-6xl text-green-600">
              <i class="fa-regular fa-circle-check"></i>
            </div>
            <h1 class="flex items-center justify-center text-2xl font-extralight mb-2" style="font-family: 'Kanit', sans-serif;">Address added successfully</h1>
          </div>
        </div>

        <div id="editSuccess" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-60 z-50 hidden">
          <div class="bg-white p-10 rounded-lg shadow-lg w-full max-w-md">
            <h2 class="text-xl font-semibold text-gray-600 mb-6" style="font-family: Michroma, sans-serif;">Camverse</h2>
            <div class="w-full flex items-center justify-center py-4 px-4 text-6xl text-green-600">
              <i class="fa-regular fa-circle-check"></i>
            </div>
            <h1 class="flex items-center justify-center text-2xl font-extralight mb-2" style="font-family: 'Kanit', sans-serif;">Address updated successfully</h1>
          </div>
        </div>

        <!-- Address Modal -->
        <div id="addressModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
          <form id="addressForm" action="/user/address/add" method="POST"
            class="bg-white p-8 shadow-lg w-full max-w-2xl space-y-6">
            <h1 id="modalTitle" class="text-2xl md:text-3xl font-semibold text-gray-800 mb-6 text-center">
              Add address
            </h1>
            <input type="hidden" name="redirectTo" value="checkout">

            
            <div>
              <label class="block text-sm text-gray-700 mb-1">Full Name</label>
              <input type="text" name="name"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">Phone</label>
              <input type="tel" name="phone"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">Pincode</label>
              <input type="text" name="pincode"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">Flat / House / Building</label>
              <input type="text" name="flat"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">Area / Street</label>
              <input type="text" name="area"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">Landmark</label>
              <input type="text" name="landmark"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">Town/City</label>
              <input type="text" name="town"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">State</label>
              <input type="text" name="state"
                    class="w-full border p-2 focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>

            <div class="pt-4 text-center">
              <button id="submitButton" type="submit"
                      class="bg-teal-600 hover:bg-teal-700 text-white px-4 py-2">
                Add address
              </button>
              <button type="button" id="closeModal" 
                      class="bg-gray-400 hover:bg-gray-500 text-white px-9 py-2">
                Cancel
              </button>
            </div>
          </form>
        </div>

        
        <div class="grid md:grid-cols-3 gap-6 max-w-8xl mx-auto items-start">

          <div class="md:col-span-2 space-y-6">

            <div class="bg-white shadow p-6">
              <% if (!user.addresses || user.addresses.length === 0) { %>
                <p class="text-gray-500">
                  <button type="button" class="openAddressModal bg-[#ffd500] rounded-lg text-black px-3 py-2">
                    <i class="fa-solid fa-location-crosshairs"></i> Add delivery address
                  </button>                    
                </p>
              <% } else if (user.addresses.length === 1) { 
                   const address = user.addresses[0]; 
              %>
                <div class="flex flex-col md:flex-row items-start justify-between gap-4 pb-4">
                  <div>
                    <p class="font-bold mb-1"> Delivering to <%= address.fullName %></p>
                    <p class="text-gray-600 text-sm">
                      <%= address.house %>, <%= address.area %>, 
                      <%= address.city %>, <%= address.state %> - 
                      <%= address.pincode %>
                    </p>
                    <p class="text-gray-600 text-sm">Mobile: <%= address.mobile %></p>
                  </div>
                </div>
              <% } else { 
                   const defaultAddress = user.addresses.find(addr => addr.isDefault);
                   const useAddress = defaultAddress || user.addresses[0];
              %>
                <div class="flex flex-col md:flex-row items-start justify-between gap-4 pb-4">
                  <div>
                    <p class="font-bold mb-1">Delivering to <%= useAddress.fullName %></p>
                    <p class="text-gray-600 text-sm">
                      <%= useAddress.house %>, <%= useAddress.area %>, 
                      <%= useAddress.city %>, <%= useAddress.state %> - 
                      <%= useAddress.pincode %>
                    </p>
                    <p class="text-gray-600 text-sm">Mobile: <%= useAddress.mobile %></p>
                  </div>
                </div>
              <% } %>
            </div>

            <!-- Product Details Card -->
            <div class="bg-white shadow p-6">
              <% if(cart && cart.items.length > 0) { %>
                <% cart.items.forEach(item => { %>
                  <div class="flex flex-col md:flex-row items-center gap-4 border-b pb-4">
                    <img src="<%= item.product.images[0].url %>" alt="<%= item.product.name %>" 
                         class="w-28 h-28 md:w-34 md:h-34 object-contain">
                    <div class="flex-1 text-center md:text-left">
                      <h2 class="text-lg font-semibold text-gray-800"><%= item.product.name %></h2>
                      <p class="mt-1 text-gray-700 font-semibold">₹<%= item.product.price.toLocaleString() %></p>
                      <p class="mt-1 text-gray-400 line-through text-sm">₹<%= item.product.mrp.toLocaleString() %></p>
                      <p class="text-sm text-green-600">
                        (Save ₹<%= (item.product.mrp - item.product.price).toLocaleString() %>, 
                        <%= Math.round(((item.product.mrp - item.product.price) / item.product.mrp) * 100) %>% off)
                      </p>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <p class="text-gray-500">Your Camverse cart is empty.</p>
                <a href="/shop" class="text-blue-500 text-sm hover:underline">Continue shopping ></a>
              <% } %>
            </div>

          </div>

          <div class="bg-white shadow p-6 h-fit">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Payment Summary <span class="font-extralight">(<%= totalQuantity %> Items)</span></h2>
            <% if(cart && cart.items.length > 0) { %>
              <div class="flex justify-between text-gray-600 mb-2">
                <span>Total MRP</span>
                <span>₹<%= totalMRP.toLocaleString() %></span>
              </div>          
              <div class="flex justify-between text-gray-600 mb-2">
                <span>Total Discount</span>
                <span class="text-green-600">- ₹<%= totalDiscount.toLocaleString() %></span>
              </div>
              <div class="flex justify-between text-gray-600 mb-2">
                <span>Shipping</span>
                <span>Free</span>
              </div>
              <hr class="my-3">
              <div class="flex justify-between font-bold text-gray-800 text-lg mb-6">
                <span>Total</span>
                <span>₹<%= total.toLocaleString() %>.00</span>
              </div>

              <form id="checkoutForm" action="/order" method="POST">
                <input type="hidden" name="addressId" value="<%= selectedAddress?._id %>">
                <div class="mb-6">
                  <h3 class="text-lg font-semibold text-gray-700 mb-3">Payment Method</h3>
                  <div class="space-y-2">
                    <label class="flex items-center space-x-2 cursor-pointer">
                      <input type="radio" name="payment" value="Cash on delivery" checked>
                      <span>Cash on Delivery</span>
                    </label>
                    <label class="flex items-center space-x-2 cursor-pointer">
                        <input type="radio" name="payment" value="online">
                        <span>Pay Online (Razorpay)</span>
                    </label>
                    <label class="flex items-center space-x-2 cursor-pointer">
                        <input type="radio" name="payment" value="wallet">
                        <span>Wallet</span>
                    </label>
                  </div>
                </div>

                <button type="submit" 
                  class="block w-full text-center bg-teal-600 text-white py-2 hover:bg-teal-700">
                  Place Order
                </button>
              </form>
            <% } %>
          </div>

        </div>
    </div>    

    <%- include('../partials/mobileFilter') %>
    <%- include('../partials/userFooter') %>
    <script src="/js/user/homePage.js"></script>
    <script src="/js/user/checkout.js"></script>
</body>
</html>
